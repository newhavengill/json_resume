<link rel="stylesheet" type="text/css" href="public/css/bootstrap.min.css" />
<link rel="stylesheet" type="text/css" href="public/css/screen.css" />
<link rel="stylesheet" type="text/css" href="public/css/mobile.css" />
<style>
body {
  font-family: 'lucida grande', sans-serif;
}
ul {
	line-height: 1.3em;
	padding-left: 1.0em;
}
ul li {
  padding-bottom: 0.5em;
}
</style>
<div id="page">
{{#bio_data}}
	<div id="top-contact">
		<div class="contact-details">
			{{#email}}
			<div class="icon-envelope icon-square"></div> {{email}}<br />
			{{/email}}
			{{#phone}}
			<div class="icon-phone icon-square"></div> {{phone}}<br />
			{{/phone}}
			{{#website}}
			<div class="icon-globe icon-square"></div><a href="{{website}}"> {{website}}</a>
			{{/website}}
		</div>
	</div>
	
	<h1 class="emphnext">{{firstname}} {{familyname}}</h1>
	{{#stars}}
	<span class="stars" style="clear:left">
		 {{#items}}
		 {{name}} {{^last}}<div class="icon-star-o icon-star"></div>{{/last}}
		 {{/items}}
	</span>
	{{/stars}}
	<br/><br/>

	{{#summary}}
	<h2><div class="icon-user icon-square"></div> ##summary##</h2>
	<ul>
		{{#points}}
		<li>{{{.}}}</li>
		{{/points}}
	</ul>
	{{/summary}}

	{{#skills}}
	<h2><div class="icon-th-list icon-square"></div> ##skills##</h2>
	<ul class="languages">
		{{#details}}
		<li>{{type}}: 
			{{#items}}
			<span class="label label-default">{{name}}</span>
			{{/items}}
		</li>
		{{/details}}
	</ul>
	{{/skills}}

	{{#experience}}
	<h2><div class="icon-briefcase icon-square"></div> ##experience##</h2>
	<ul>
		{{#items}}
		<li>{{title}}, {{{organisation}}}{{#location}}, {{{location}}}{{/location}}
			<span class="right">({{from}} â€“ {{to}})</span>
			<ul>
				{{#details}}
				<li>{{{.}}}</li>
				{{/details}}
				{{#technology_used}}
				<li>##technology_used##: 
					{{#tools}}
					<span class="label label-default">{{name}}</span>
					{{/tools}}
				</li>
				{{/technology_used}}
			</ul>
		</li>
		{{/items}}
	</ul>
	{{/experience}}

	{{#education}}
	<h2><div class="icon-mortar-board icon-rect"></div> ##education##</h2>
	<div id="mobile-table">
		<div class="table-responsive">
			<table class="table education">
				<tr>
					<th>##degree##</th><th>##institution##</th><th nowrap>##graduation_year##</th>{{#show_gpa}}<th>##gpa##</th>{{/show_gpa}}
				</tr>
				{{#schools}}
				<tr>
					<td>{{degree}}</td><td>{{institution}}</td><td align="center">{{graduation_year}}</td>{{#show_gpa}}<td>{{gpa}}</td>{{/show_gpa}}
				</tr>
				{{/schools}}
			</table>
		</div>
	</div>
	<div id="desktop-table">
		<table class="table education">
			<tr>
				<th>##degree##</th><th>##institution##</th><th nowrap>##graduation_year##</th>{{#show_gpa}}<th>##gpa##</th>{{/show_gpa}}
			</tr>
			{{#schools}}
			<tr>
				<td>{{degree}}</td><td>{{institution}}</td><td align="center">{{graduation_year}}</td>{{#show_gpa}}<td>{{gpa}}</td>{{/show_gpa}}
			</tr>
			{{/schools}}
		</table>
	</div>
	{{/education}}
</div>
{{/bio_data}}

{{#settings}}
	{{#icons}}
	<script src="public/js/grunticon.js"></script>
	{{/icons}}
{{/settings}}
</div><!-- End Page -->